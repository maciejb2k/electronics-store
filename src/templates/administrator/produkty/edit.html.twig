{% extends "/layouts/admin.html.twig" %}
{% block content %}

	<div class="container admin-form">
		<div class="row mb-3">
			<h1>Edytuj Produkt #{{data.id}}</h1>
			<a class="" href="{{ route("produkty.index") }}">Powrót do wszystkich produktów</a>
		</div>

		{% if sessionGet("success__edit") %}
		<div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
			{{ sessionShow("success__edit") }}
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
		{% endif %}
		{% if sessionGet("error__edit") %}
			<div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
				{{ sessionShow("error__edit") }}
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		{% endif %}

		<form method="POST">
			<div class="form-group mb-3">
				<div class="mb-3">
					<label for="nazwa" class="form-label">Nazwa</label>
					<input value="{{data.nazwa}}" id="nazwa" name="nazwa" type="text" class="form-control"/>
				</div>
				<div class="mb-3">
					<label for="kod_producenta" class="form-label">Kod Producenta</label>
					<input value="{{data.kod_producenta}}" id="kod_producenta" name="kod_producenta" type="text" class="form-control"/>
				</div>
				<div class="mb-3">
					<label for="cena" class="form-label">Cena</label>
					<input id="cena" value="{{data.cena}}" name="cena" type="number" min="1" max="100000" step="0.01" class="form-control"/>
				</div>
				<div class="mb-3">
					<label for="ilosc" class="form-label">Ilość</label>
					<input id="ilosc" value="{{data.ilosc}}" name="ilosc" type="number" min="0" max="1000" class="form-control"/>
				</div>
				<div class="mb-3">
					<label for="opis" class="form-label">Opis</label>
					<textarea class="form-control" name="opis" id="opis" cols="5" rows="7">{{data.opis}}</textarea>
				</div>
				<div class="mb-3">
					<label for="kategoria" class="form-label">Kategoria</label>
					<input value="{{data.kategoria}}" id="kategoria" name="kategoria" type="text" class="form-control"/>
				</div>
        <input value="{{data.id}}" name="id" type="hidden"/>
				<input class="btn btn-primary" type="submit" value="Edytuj"/>
			</div>
		</form>
	</div>

{% endblock %}
